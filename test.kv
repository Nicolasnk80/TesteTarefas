<Manager>:
	Menu:
		name:"menu"
	Tarefas:
		name:"tarefas"
<Botao@ButtonBehavior+Label>:
	canvas.before:
		Color:
			rgba:0.1,0.5,0.7,1
		RoundedRectangle:
			pos:self.pos
			size:self.size
			radius: [25]
<Menu>:
	BoxLayout:
		orientation:"vertical"
		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				pos:self.pos
				size:self.size
		padding:root.width*0.25,root.height*0.1
		spacing:"30dp"
		Image:
			source:"robo.png"
			allow_stretch:True
			size_hint_y:4
		Botao:
			text:"Tarefas"
			font_size:'25sp'
			on_release:app.root.current = "tarefas"
		Botao:
			text:"Sair"
			font_size:'25sp'
			on_release:app.stop()
<Tarefas>:
	BoxLayout:
		orientation:"vertical"
		canvas:
			Color:
				rgba:0.3,0.3,0.3,1
			Rectangle:
				pos:self.pos
				size:self.size
		ActionBar:
			ActionView:
				ActionPrevious:
					title:"Tarefas"
					on_release:app.root.current = "menu"
				ActionButton:
					text:"Sair"
					on_release:app.stop()
		ScrollView:
			BoxLayout:
				id:box
				orientation:"vertical"
				size_hint_y:None
				height:self.minimum_height
		BoxLayout:
			size_hint_y:None
			height:'40dp'
			TextInput:
				id:texto
			Button:
				text:"+"
				size_hint_x:None
				width:'40dp'
				on_release:root.addWidget()
<Tarefa>:
	size_hint_y:None
	height:'100dp'
	Label:
		id:label
		font_size:'20sp'
	Button:
		text:"X"
		size_hint_x:None
		width:'40dp'
		on_release:app.root.get_screen('tarefas').ids.box.remove_widget(root)
